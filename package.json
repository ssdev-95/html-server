{
	"name": "html-server",
	"displayName": "html-server",
	"description": "An alternative to live server and html preview",
	"version": "0.1.25",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other",
		"Education"
	],
	"activationEvents": [
		"onCommand:html-server.helloWorld",
		"onCommand:html-server.start",
		"onCommand:html-server.stop"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "html-server.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "html-server.start",
				"title": "Start server"
			},
			{
				"command": "html-server.stop",
				"title": "Stop server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"server:prod": "node build/server.js",
		"server:dev": "ts-node-dev src/server.ts"
	},
	"devDependencies": {
		"@types/connect-livereload": "^0.6.0",
		"@types/express": "^4.17.13",
		"@types/glob": "^7.2.0",
		"@types/livereload": "^0.9.2",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.5.5",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"chokidar": "^3.5.3",
		"connect-livereload": "^0.6.1",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"livereload": "^0.9.3"
	}
}

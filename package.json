{
  "name": "html-server",
	"displayName": "html-server",
	"description": "An alternative to live server and html preview",
	"version": "0.1.0.",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other",
		"Dev tools"
	],
	"activationEvents": [
    "onCommand:html-server.helloWorld",
		"onCommand:html-server.start",
		"onCommand:html-server.stop"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "html-server.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "html-server.start",
				"title": "Starting server"
			},
			{
				"command": "html-server.stop",                   
				"title": "Stoping server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
